@{
    @model IEnumerable<Instructor>;

    <h1>Instructor List</h1>


    <table class="table table-dark">

        <tr>
            <th colspan="7">Instructor</th>
        </tr>

        <tr>
            <td>Name</td>
            <td>Is Tenured</td>
            <td>Rank</td>
            <td>Hiring Date</td>
            <td>Details</td>
            <td>Update</td>

        </tr>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.FirstName @instructor.LastName</td>
                <td>@instructor.IsTenured</td>
                <td>@instructor.Rank</td>
                <td>@instructor.HiringDate</td>
                <td><a asp-action="ShowDetails" asp-route-id="@instructor.Id">Show Details</a></td>
                <td><a asp-action="UpdateInstructor" asp-route-id="@instructor.Id">Update Instructor</a></td>
            </tr>
        }
    </table>
    <button type="submit" class="btn btn-primary"><a class="text-light" asp-area="" asp-controller="Instructor" asp-action="AddInstructor">Add Instructor</a></button>
}


