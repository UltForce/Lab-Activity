@{
    @model Instructor;
    <h1>Delete Instructor</h1>
    <form asp-action="DeleteInstructor" asp-asp-controller="Instructor" method="post">
       
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" placeholder="Enter First Name" readonly disabled>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" placeholder="Enter Last Name" readonly disabled>
        </div>
        <div class="form-group">
            <label asp-for="Rank">Rank</label>
            <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control" readonly disabled></select>
        </div>
        <div class="form-group">
            <label asp-for="HiringDate">Hiring Date</label>
            <input asp-for="HiringDate" class="form-control" readonly disabled>
        </div>
        <div class="form-group">
            <label asp-for="IsTenured">Is Tenured</label>
        </div>
        <div class="form-group">
            <input type="radio" asp-for="IsTenured" value="true" checked readonly disabled>
            <label asp-for="IsTenured">
                Yes
            </label>
        </div>
        <div class="form-group">
            <input type="radio" asp-for="IsTenured" value="false" readonly disabled>
            <label asp-for="IsTenured">
                No
            </label>
        </div>
        <br>
        <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
        <button type="submit" class="btn btn-primary">Delete</button>
    </form>
}
