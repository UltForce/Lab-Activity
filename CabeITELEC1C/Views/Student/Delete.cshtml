@{
    @model Student;
    <h1>Delete Student ?</h1>
    <form asp-action="Delete" asp-controller="Student" method="post">
        <div class="form-group">
            <label asp-for="Id" hidden>Id</label>
            <input class="form-control" asp-for="Id" placeholder="Enter Id" hidden readonly disabled>
        </div>
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" placeholder="Enter First Name" readonly disabled>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" placeholder="Enter Last Name" readonly disabled>
        </div>
        <div class="form-group">
            <label asp-for="Course">Course</label>
            <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))" class="form-control" readonly disabled></select>
        </div>
        <div class="form-group">
            <label asp-for="AdmissionDate">Admission Date</label>
            <input asp-for="AdmissionDate" class="form-control" readonly disabled>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email Address</label>
            <input class="form-control" asp-for="Email" placeholder="Enter Email Address" readonly disabled>
        </div>
        <div class="form-group">
            <label asp-for="GPA">GPA</label>
            <input class="form-control" asp-for="GPA" placeholder="Enter GPA" readonly disabled>
        </div>
        <br>
        <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
        <button type="submit" class="btn btn-primary">Delete</button>

    </form>
}
