@{
    @model Student;
    <h1>Add Student</h1>
    <form asp-action="AddStudent" asp-asp-controller="Student" method="post">
        <div class="form-group">
            <label asp-for="Id">Id</label>
            <input class="form-control" asp-for="Id" placeholder="Enter Id">
        </div>
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" placeholder="Enter First Name">
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" placeholder="Enter Last Name">
        </div>
        <div class="form-group">
            <label asp-for="Course">Course</label>
            <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))" class="form-control"></select>
        </div>
        <div class="form-group">
        <label asp-for="AdmissionDate">Admission Date</label>
        <input asp-for="AdmissionDate" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email Address</label>
            <input class="form-control" asp-for="Email" placeholder="Enter Email Address">
        </div>
        <div class="form-group">
            <label asp-for="GPA">GPA</label>
            <input class="form-control" asp-for="GPA" placeholder="Enter GPA">
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
