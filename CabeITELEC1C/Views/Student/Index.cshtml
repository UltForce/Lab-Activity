
@{
    @model IEnumerable<Student>;

    <h1>Student List</h1>

    <table class="table table-dark">
    
        <tr>
            <th colspan="8">Student</th>
        </tr>

        <tr>
            <td>Name</td>
            <td>Course</td>
            <td>Admission Date</td>
            <td>Email</td>
            <td>GPA</td>
            <td>Details</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName @student.LastName</td>
                <td>@student.Course</td>
                <td>@student.AdmissionDate</td>
                <td>@student.Email</td>
                <td>@student.GPA</td>
                <td><a class="btn btn-primary" asp-route-id="@student.Id" asp-action="ShowDetail">Show Details</a></td>
                <td><a class="btn btn-info" asp-route-id="@student.Id" asp-action="UpdateStudent">Update Student</a></td>
                <td><a class="btn btn-danger" asp-route-id="@student.Id" asp-action="Delete">Delete Student</a></td>
            </tr>
        }
    </table>
    <button type="submit" class="btn btn-primary"><a class="text-light" asp-area="" asp-controller="Student" asp-action="AddStudent">Add Student</a></button>
    
}

